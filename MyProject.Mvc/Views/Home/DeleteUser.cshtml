@using Kendo.Mvc.UI
@using MyProject.Common.ViewModels
@model UserDetailsVM

@{
    ViewBag.Title = "Kullanici Detayi Sil";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

@using (Html.BeginForm("DeleteUser", "Home", FormMethod.Post))
{
    <div class="form-group">
        Silinecek Kullanici Detayi Seciniz...
        <div class="col-sm-10">
            @(Html.Kendo().DropDownList()
                            .Name("DeletedId")
                            .DataTextField("Name")
                            .DataValueField("UserDetailId")
                            .DataSource(source =>
                            {
                                source.Read(read =>
                                {
                                    read.Action("GetAllUserDetails", "Home");
                                });
                            })
                            .HtmlAttributes(new { style = "width: 100%" })
            )
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info">Sil</button>
        </div>
    </div>
}

