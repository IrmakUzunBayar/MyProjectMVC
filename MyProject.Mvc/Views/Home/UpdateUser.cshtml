@using Kendo.Mvc.UI
@using MyProject.Common.ViewModels
@model UserDetailsVM

@{
    ViewBag.Title = "Kullanici Detayi Sil";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

@using (Html.BeginForm("UpdateUser", "Home", FormMethod.Post))
{
    <div class="form-group">
        Silinecek Kullanici Detayi Seciniz...
        <div class="col-sm-10">
            @(Html.Kendo().DropDownList()
                                                    .Name("UpdatedId")
                                                    .OptionLabel("Seciniz...")
                                                    .DataTextField("Name")
                                                    .DataValueField("UserDetailId")
                                                    .DataSource(source =>
                                                    {
                                                        source.Read(read =>
                                                        {
                                                            read.Action("GetAllUserDetails", "Home");
                                                        });
                                                    })
                                                    .HtmlAttributes(new { style = "width: 100%" })
            )
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeHolder = "Isim giriniz..." })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.LastName, new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeHolder = "Soyad giriniz..." })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info">Guncelle</button>
        </div>
    </div>     
}

